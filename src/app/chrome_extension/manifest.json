{
  "manifest_version": 3,
  "name": "It's Ham or Spam Extension",
  "version": "1.3",
  "description": "Scan selected text for phishing/spam using local model.",
  "permissions": ["contextMenus", "storage", "tabs"],
  "host_permissions": ["http://localhost:8000/*", "http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "It's Ham or Spam Extension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
